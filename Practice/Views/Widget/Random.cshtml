@model Practice.ViewModels.RandomWidgetViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<h2>@Model.Widget.Name</h2>

@if(Model.Customers.Count == 0)
{
    <text> No one has bought this widget before. </text>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>

        }
    </ul>

}




